<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/buildings_in_night"
             tools:context="com.salilgodbole.crossovertest.fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_32_dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_signup"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen_32_dp"
            android:layout_marginBottom="@dimen/dimen_16_dp"
            android:background="@color/colorPrimary"
            android:text="@string/title_signup"
            android:textColor="@color/textColor"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_signin"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_signup"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen_32_dp"
            android:layout_marginTop="@dimen/dimen_16_dp"
            android:background="@color/colorPrimary"
            android:text="@string/title_signin"
            android:textColor="@color/textColor"/>
    </RelativeLayout>

</FrameLayout>
